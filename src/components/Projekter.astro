    }
.skills_fill {
animation-name: skills_kf;
animation-duration: 8s;
animation-timing-function: linear;
animation-fill-mode: both;
animation-iteration-count: infinite;
animation-direction: alternate;
}

@keyframes skills_kf {
0% {
clip-path: inset(0 100% 0 0);
}
100% {
