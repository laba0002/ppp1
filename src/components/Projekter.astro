<style>
.skills_fill {
  animation-name: skills_kf;
  animation-duration: 8s;
  animation-timing-function: linear;
  animation-fill-mode: both;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

@keyframes skills_kf {
  0% {
    clip-path: inset(0 100% 0 0);
  }
  100% {
    clip-path: inset(0 0 0 0);
  }
}
</style>

<script>
// Create an intersection observer
const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting) {
            // Start the animation here
            document.querySelector('.firstBar').classList.add("animate");
            document.querySelector('.secondBar').classList.add("animate");
            observer.disconnect(); // Stop observing after the animation starts
        }
    });
}, { threshold: 0.1 }); // Trigger when 10% of the section is visible

// Observe the skills container
const skillsContainer = document.querySelector('.skills_fill');
observer.observe(skillsContainer);
</script>
